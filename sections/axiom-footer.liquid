<section id="axiom-footer" class="axiom-footer-section">
    <div class="axiom-footer-bg">
      <img src="{{ section.settings.bg_image | image_url: width: 1920 }}" alt="Footer Background" class="axiom-footer-bg-img" width="1920" height="600" />
      <div class="axiom-footer-branding">
        <span class="axiom-footer-branding-big">AXIOM</span>
        <span class="axiom-footer-move">MOVE<br>YOUR WAY.</span>
      </div>
    </div>
    <div class="axiom-footer-content">
      <div class="axiom-footer-columns">
        <div class="axiom-footer-col">
          <h4>CATEGORIES</h4>
          <ul>
            <li><a href="#">ALL</a></li>
            <li><a href="#">TOPS</a></li>
            <li><a href="#">BOTTOMS</a></li>
            <li><a href="#">OUTERWEAR</a></li>
            <li><a href="#">ACCESSORIES</a></li>
            <li><a href="#">NEW ARRIVALS</a></li>
            <li><a href="#">BEST SELLERS</a></li>
            <li><a href="#">SALE</a></li>
          </ul>
        </div>
        <div class="axiom-footer-col">
          <h4>SUPPORT</h4>
          <ul>
            <li><a href="#">MY ACCOUNT</a></li>
            <li><a href="#">PAYMENT METHODS</a></li>
            <li><a href="#">RETURNS & REFUNDS</a></li>
            <li><a href="#">SHIPPING & DELIVERY</a></li>
            <li><a href="#">TERMS & CONDITIONS</a></li>
            <li><a href="#">PRIVACY POLICY</a></li>
          </ul>
        </div>
        <div class="axiom-footer-col">
          <h4>ABOUT</h4>
          <ul>
            <li><a href="#">ABOUT AXIOM</a></li>
            <li><a href="#">JOURNAL</a></li>
            <li><a href="#">CONTACT</a></li>
          </ul>
        </div>
        <div class="axiom-footer-col">
          <h4>SOCIAL MEDIA</h4>
          <ul>
            <li><a href="#">INSTAGRAM</a></li>
            <li><a href="#">X / TWITTER</a></li>
            <li><a href="#">YOUTUBE</a></li>
            <li><a href="#">FACEBOOK</a></li>
            <li><a href="#">TWITCH</a></li>
          </ul>
        </div>
      </div>
      <div class="axiom-footer-bottom">
        <form class="axiom-footer-subscribe" onsubmit="return false;">
          <input type="email" placeholder="Your Email Address" required>
          <button type="submit">SUBSCRIBE</button>
        </form>
        <div class="axiom-footer-privacy">
          <label>
            <input type="checkbox" required>
            BY SUBSCRIBING YOU AGREE TO THE PRIVACY POLICY
          </label>
        </div>
        <div class="axiom-footer-legal">
          <a href="#">TERMS & CONDITIONS</a>
          <a href="#">PRIVACY POLICY</a>
        </div>
      </div>
    </div>
    <style>
      .axiom-footer-section {
        position: fixed;
        left: 0; bottom: -100vh; width: 100vw;
        z-index: 1000;
        transition: bottom 0.7s cubic-bezier(.86,0,.07,1);
        box-shadow: 0 -10px 60px 0 rgba(0,0,0,0.28);
        font-family: 'Montserrat', 'Arial Black', Arial, sans-serif;
      }
      .axiom-footer-section.revealed {
        bottom: 0;
      }
      .axiom-footer-bg {
        position: absolute;
        left: 0; top: 0; width: 100%; height: 100%;
        z-index: 1;
        overflow: hidden;
      }
      .axiom-footer-bg-img {
        width: 100%; height: 100%; object-fit: cover; filter: grayscale(1) brightness(0.8);
        position: absolute; left: 0; top: 0;
      }
      .axiom-footer-branding {
        position: absolute; left: 0; top: 0; width: 100%; height: 100%;
        z-index: 2;
        display: flex; flex-direction: column; justify-content: flex-start; align-items: flex-start;
        padding: 40px 0 0 40px;
        pointer-events: none;
      }
      .axiom-footer-branding-big {
        font-size: 17vw;
        font-weight: 900;
        color: #fff;
        opacity: 0.07;
        letter-spacing: 0.07em;
        line-height: 0.8;
        position: absolute; left: 0; top: 0;
        user-select: none;
        pointer-events: none;
      }
      .axiom-footer-move {
        font-size: 3.6vw;
        font-weight: 900;
        color: #fff;
        z-index: 3;
        margin-top: 2vw;
        letter-spacing: 0.02em;
        text-shadow: 0 4px 24px rgba(0,0,0,0.38);
        user-select: none;
        pointer-events: none;
      }
      .axiom-footer-content {
        position: relative;
        z-index: 5;
        background: rgba(0,0,0,0.88);
        padding: 11vw 4vw 2vw 4vw;
        box-sizing: border-box;
        min-height: 52vh;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
      }
      .axiom-footer-columns {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        gap: 2vw;
        margin-bottom: 2vw;
      }
      .axiom-footer-col h4 {
        color: #fff;
        font-size: 1.1vw;
        font-weight: 700;
        letter-spacing: 0.06em;
        margin-bottom: 1vw;
        margin-top: 0;
      }
      .axiom-footer-col ul {
        list-style: none; padding: 0; margin: 0;
      }
      .axiom-footer-col li {
        margin-bottom: 0.6vw;
      }
      .axiom-footer-col a {
        color: #fff;
        text-decoration: none;
        font-size: 1vw;
        letter-spacing: 0.04em;
        opacity: 0.82;
        transition: opacity 0.18s;
        text-transform: uppercase;
        font-weight: 500;
        display: inline-block;
      }
      .axiom-footer-col a:hover {
        opacity: 1;
        text-decoration: underline;
      }
      .axiom-footer-bottom {
        display: flex;
        flex-direction: column;
        gap: 0.5vw;
        align-items: flex-start;
        margin-top: 1vw;
        width: 100%;
      }
      .axiom-footer-subscribe {
        display: flex;
        flex-direction: row;
        width: 100%;
        max-width: 600px;
        margin-bottom: 0.6vw;
      }
      .axiom-footer-subscribe input[type="email"] {
        flex: 1;
        padding: 0.8vw 1vw;
        font-size: 1vw;
        border: none;
        outline: none;
        background: #181818;
        color: #fff;
        border-radius: 0;
        border-bottom: 2px solid #fff;
        margin-right: 0.7vw;
      }
      .axiom-footer-subscribe button {
        background: #fff;
        color: #111;
        font-weight: bold;
        padding: 0.8vw 2vw;
        font-size: 1vw;
        border: none;
        border-radius: 0;
        cursor: pointer;
        transition: background 0.18s, color 0.18s;
        letter-spacing: 0.05em;
      }
      .axiom-footer-subscribe button:hover {
        background: #111;
        color: #fff;
        border: 2px solid #fff;
      }
      .axiom-footer-privacy {
        font-size: 0.8vw;
        color: #fff;
        opacity: 0.7;
        margin-bottom: 0.4vw;
        display: flex;
        align-items: center;
      }
      .axiom-footer-privacy input[type="checkbox"] {
        margin-right: 0.5vw;
        accent-color: #fff;
      }
      .axiom-footer-legal {
        position: absolute;
        right: 4vw;
        bottom: 2vw;
        display: flex;
        gap: 1.6vw;
      }
      .axiom-footer-legal a {
        color: #fff;
        font-size: 0.95vw;
        opacity: 0.7;
        text-decoration: none;
        transition: opacity 0.18s;
      }
      .axiom-footer-legal a:hover {
        opacity: 1;
        text-decoration: underline;
      }
      @media (max-width: 900px) {
        .axiom-footer-content { padding: 26vw 4vw 6vw 4vw; }
        .axiom-footer-columns { flex-direction: column; gap: 4vw; }
        .axiom-footer-col h4 { font-size: 4vw; }
        .axiom-footer-col a, .axiom-footer-col li { font-size: 3.5vw; }
        .axiom-footer-move { font-size: 8vw; }
        .axiom-footer-branding-big { font-size: 34vw; }
        .axiom-footer-legal { position: static; gap: 4vw; margin-top: 2vw; }
        .axiom-footer-subscribe input[type="email"], .axiom-footer-subscribe button { font-size: 3vw; }
        .axiom-footer-privacy { font-size: 2vw; }
      }
    </style>
    <script>
      // Sticky reveal logic: show footer only when scrolled to bottom
      document.addEventListener('DOMContentLoaded', function() {
        function revealFooter() {
          const footer = document.getElementById('axiom-footer');
          if (!footer) return;
          if ((window.innerHeight + window.scrollY) >= (document.body.offsetHeight - 2)) {
            footer.classList.add('revealed');
          } else {
            footer.classList.remove('revealed');
          }
        }
        window.addEventListener('scroll', revealFooter);
        window.addEventListener('resize', revealFooter);
        revealFooter();
      });
    </script>
  </section>
  
  {% schema %}
  {
    "name": "AXIOM Sticky Footer",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
      }
    ]
  }
  {% endschema %}