{%- style -%}
html, body {
  max-width: 100vw !important;
  overflow-x: hidden !important;
  box-sizing: border-box !important;
}
.footer, .footer * {
  box-sizing: border-box !important;
  max-width: 100vw !important;
  overflow-x: hidden !important;
}
.footer {
  background-color: #000;
  color: #fff;
  padding-top: 50px;
  position: relative;
  max-width: 100vw;
  overflow-x: hidden;
}

.footer-top {
  padding: 0 20px;
  margin-bottom: 50px;
  max-width: 1400px;
  margin-left: auto;
  margin-right: auto;
}

.newsletter-form {
  display: flex;
  width: 100%;
  margin: 0 auto;
}

.newsletter-input-wrapper {
  flex: 1;
  position: relative;
}

.newsletter-input {
  width: 100%;
  height: 60px;
  background-color: transparent;
  border: none;
  border-bottom: 1px solid rgba(255, 255, 255, 0.3);
  color: #fff;
  font-size: 16px;
  padding: 0 20px;
  outline: none;
}

.newsletter-input::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.newsletter-submit {
  height: 60px;
  background-color: #fff;
  border: none;
  color: #000;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 0 30px;
}

.newsletter-submit:hover {
  background-color: #f2f2f2;
}

.consent-checkbox {
  display: flex;
  align-items: center;
  margin-top: 15px;
  padding-left: 10px;
}

.consent-checkbox input[type="checkbox"] {
  appearance: none;
  -webkit-appearance: none;
  width: 18px;
  height: 18px;
  border: 1px solid rgba(255, 255, 255, 0.3);
  background-color: transparent;
  position: relative;
  cursor: pointer;
  margin: 0;
}

.consent-checkbox input[type="checkbox"]:checked:before {
  content: "âœ“";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 12px;
}

.consent-checkbox label {
  margin-left: 10px;
  font-size: 12px;
  color: rgba(255, 255, 255, 0.7);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.footer-hero {
  width: 100%;
  position: relative;
  overflow: hidden;
  height: 80vh;
  min-height: 500px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0 5%;
}

.footer-hero-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 1;
  filter: brightness(0.6);
}

.footer-hero-content {
  position: relative;
  z-index: 2;
  max-width: 400px;
}

.footer-hero-title {
  font-size: clamp(3rem, 8vw, 5rem);
  font-weight: 800;
  line-height: 0.9;
  text-transform: uppercase;
  margin-bottom: 1rem;
}

.footer-logo {
  width: 50px;
  height: 50px;
  margin-top: 2rem;
}

.footer-navigation {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
  padding: 50px 5%;
  /* border-top: 1px solid rgba(255, 255, 255, 0.1); */
}

.footer-column h3 {
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  margin-bottom: 20px;
  letter-spacing: 1px;
  color: #fff;
}

.footer-nav-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-nav-list li {
  margin-bottom: 10px;
}

.footer-nav-list a {
  color: rgba(255, 255, 255, 0.7);
  text-decoration: none;
  font-size: 14px;
  transition: color 0.3s ease;
}

.footer-nav-list a:hover {
  color: #fff;
}

.footer-bottom {
  /* border-top: 1px solid rgba(255, 255, 255, 0.1); */
  padding: 20px 5%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.footer-links {
  display: flex;
  gap: 30px;
}

.footer-links a {
  color: rgba(255, 255, 255, 0.7);
  text-decoration: none;
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  transition: color 0.3s ease;
}

.footer-links a:hover {
  color: #fff;
}

@media screen and (max-width: 991px) {
  .footer-navigation {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media screen and (max-width: 767px) {
  html, body {
    max-width: 100vw !important;
    overflow-x: hidden !important;
  }
  .footer-hero {
    height: 60vh;
  }
  .footer-navigation {
    grid-template-columns: 1fr;
    max-width: 100vw;
    overflow-x: hidden;
  }
  .footer-bottom {
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
    max-width: 100vw;
    overflow-x: hidden;
  }
  .footer-links {
    flex-direction: column;
    gap: 15px;
    max-width: 100vw;
    overflow-x: hidden;
  }
  .footer {
    max-width: 100vw;
    overflow-x: hidden;
  }
}

{%- endstyle -%}

