<section class="axiom-product-collection-section">
  <!-- CATEGORY NAVIGATION BAR -->
  <nav class="axiom-category-nav">
    <ul>
      <li><a href="/collections/all" class="{%- if collection.handle == 'all' -%}active{%- endif -%}">ALL</a></li>
      {% for link in linklists.main-menu.links %}
        {% if link.type == 'collection_link' %}
          <li><a href="{{ link.url }}" class="{%- if collection.handle == link.object.handle -%}active{%- endif -%}">{{ link.title | upcase }}</a></li>
        {% endif %}
      {% endfor %}
    </ul>
  </nav>

  <!-- PRODUCT GRID -->
  <div class="axiom-product-grid">
    {% for product in collection.products %}
      <div class="axiom-product-card">
        <a href="{{ product.url }}" class="axiom-product-image-link">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | image_url: width:600, height:800 }}" alt="{{ product.title }}" class="axiom-product-image" width="600" height="800" />
          {% endif %}
          {% if product.images.size > 1 %}
            <img src="{{ product.images[1] | image_url: width:600, height:800 }}" alt="{{ product.title }} - alternate" class="axiom-product-image hover-image" width="600" height="800" />
          {% endif %}
        </a>
        <div class="axiom-product-info">
          {% if product.tags contains 'new' %}
            <span class="axiom-badge new">NEW</span>
          {% endif %}
          {% if product.compare_at_price > product.price %}
            <span class="axiom-badge sale">SALE</span>
          {% endif %}
          <div class="axiom-product-type">{{ product.type }}</div>
          <div class="axiom-product-title">{{ product.title }}</div>
          <div class="axiom-product-price">
            {% if product.compare_at_price > product.price %}
              <span class="old-price">{{ product.compare_at_price | money }}</span>
            {% endif %}
            <span class="current-price">{{ product.price | money }}</span>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <style>
    html, body {
      overflow-x: hidden !important;
      width: 100%;
      box-sizing: border-box;
    }
    .axiom-product-collection-section {
      background: #111;
      width: 100%;
      min-height: 100vh;
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }
    .axiom-category-nav {
      width: 100%;
      background: #222;
      padding: 0 0 0 0;
      border-bottom: 2px solid #fff;
      margin-bottom: 0;
    }
    .axiom-category-nav ul {
      display: flex;
      flex-direction: row;
      gap: 16px;
      list-style: none;
      margin: 0;
      padding: 0 2vw;
      align-items: center;
      height: 56px;
    }
    .axiom-category-nav a {
      color: #fff;
      font-size: 1.4vw;
      font-weight: 900;
      text-decoration: none;
      opacity: 0.85;
      letter-spacing: 0.02em;
      transition: opacity 0.18s, border 0.18s;
      padding: 0 8px;
      text-transform: uppercase;
      border-bottom: 2px solid transparent;
      line-height: 56px;
      display: block;
    }
    .axiom-category-nav a.active, .axiom-category-nav a:hover {
      opacity: 1;
      border-bottom: 2px solid #fff;
    }
    .axiom-product-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 0;
      border-left: 2px solid #fff;
      border-right: 2px solid #fff;
      border-bottom: 2px solid #fff;
      box-sizing: border-box;
      width: 100%;
      margin: 0 auto;
      background: #111;
    }
    .axiom-product-card {
      background: #111;
      border-right: 2px solid #fff;
      border-bottom: 2px solid #fff;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      position: relative;
      min-height: 340px;
      overflow: hidden;
      transition: box-shadow 0.2s;
    }
    .axiom-product-card:nth-child(3n) {
      border-right: none;
    }
    .axiom-product-image-link {
      display: block;
      width: 100%;
      height: 340px;
      overflow: hidden;
      position: relative;
    }
    .axiom-product-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: opacity 0.3s;
      display: block;
      position: absolute;
      top: 0; left: 0;
      z-index: 1;
    }
    .hover-image {
      opacity: 0;
      z-index: 2;
      pointer-events: none;
    }
    .axiom-product-card:hover .hover-image {
      opacity: 1;
    }
    .axiom-product-card:hover .axiom-product-image:not(.hover-image) {
      opacity: 0;
    }
    .axiom-product-info {
      color: #fff;
      padding: 16px 18px 12px 18px;
      background: #111;
      min-height: 100px;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
    }
    .axiom-badge {
      display: inline-block;
      font-size: 0.85em;
      font-weight: bold;
      color: #111;
      background: #fff;
      padding: 2px 8px;
      margin-right: 8px;
      border-radius: 2px;
      margin-bottom: 6px;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    .axiom-badge.sale {
      background: #fff;
      color: #111;
    }
    .axiom-badge.new {
      background: #fff;
      color: #111;
    }
    .axiom-product-type {
      font-size: 0.85em;
      color: #fff;
      margin-bottom: 4px;
      text-transform: uppercase;
      opacity: 0.8;
    }
    .axiom-product-title {
      font-size: 1.15em;
      font-weight: bold;
      margin-bottom: 4px;
      color: #fff;
    }
    .axiom-product-price {
      font-size: 1.2em;
      font-weight: bold;
      color: #fff;
      margin-top: 4px;
    }
    .axiom-product-price .old-price {
      text-decoration: line-through;
      opacity: 0.6;
      margin-right: 8px;
    }
    @media (max-width: 900px) {
      .axiom-product-grid {
        grid-template-columns: 1fr;
      }
      .axiom-category-nav ul {
        gap: 4vw;
        font-size: 3vw;
      }
    }
  </style>
</section>
