{%- style -%}
.product-recommendations-section {
  background: #111;
  padding: 3rem 0 2rem 0;
  color: #fff;
}
.product-recommendations-title {
  font-size: 2.2rem;
  font-weight: 800;
  margin-bottom: 2rem;
  text-align: left;
  letter-spacing: -0.02em;
}
.product-recommendations-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.5rem;
}
@media (min-width: 750px) {
  .product-recommendations-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
{%- endstyle -%}
<section class="product-recommendations-section">
  <div class="page-width">
    <div class="product-recommendations-title">You May Also Like</div>
    <div class="product-recommendations-grid">
      {% for recommendation in recommendations.products limit: 3 %}
        <div class="product-card">
          <a href="{{ recommendation.url }}" class="product-card__link">
            <div class="product-card__image-wrapper">
              <img src="{{ recommendation.featured_image | image_url: width: 600, height: 800 }}" alt="{{ recommendation.title }}" class="product-card__image" width="600" height="800" />
            </div>
            <div class="product-card__info">
              <div class="product-card__title">{{ recommendation.title }}</div>
              <div class="product-card__price">{{ recommendation.price | money }}</div>
            </div>
          </a>
        </div>
      {% else %}
        <p>No recommendations found.</p>
      {% endfor %}
    </div>
  </div>
</section>
