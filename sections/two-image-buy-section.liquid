<section class="two-image-buy-section">
  <div class="two-image-grid">
    <!-- LEFT IMAGE BOX -->
    <div class="image-box left">
      {%- if section.settings.left_image != blank -%}
        <img 
          src="{{ section.settings.left_image | image_url: width:900, height:1200 }}"
          alt="{{ section.settings.left_title }}"
          style="object-position: {{ section.settings.left_focal_point }};"
          class="side-image"
          width="900" height="1200"
        />
      {%- endif -%}
      <div class="image-overlay">
        <h2 class="image-title">{{ section.settings.left_title }}</h2>
        {%- if section.settings.left_button_text and section.settings.left_button_link -%}
          <a class="buy-btn" href="{{ section.settings.left_button_link }}">{{ section.settings.left_button_text }}</a>
        {%- endif -%}
      </div>
    </div>
    <!-- RIGHT IMAGE BOX -->
    <div class="image-box right">
      {%- if section.settings.right_image != blank -%}
        <img 
          src="{{ section.settings.right_image | image_url: width:900, height:1200 }}"
          alt="{{ section.settings.right_title }}"
          style="object-position: {{ section.settings.right_focal_point }};"
          class="side-image"
          width="900" height="1200"
        />
      {%- endif -%}
      <div class="image-overlay">
        <h2 class="image-title">{{ section.settings.right_title }}</h2>
        {%- if section.settings.right_button_text and section.settings.right_button_link -%}
          <a class="buy-btn" href="{{ section.settings.right_button_link }}">{{ section.settings.right_button_text }}</a>
        {%- endif -%}
      </div>
    </div>
  </div>
  <style>
    .two-image-buy-section {
      width: 100vw;
      background: #111;
      padding: 0;
      margin: 0;
    }
    .two-image-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 0;
      border: 2px solid #fff;
      background: #111;
      min-height: 60vh;
      max-width: 100vw;
      overflow: hidden;
    }
    .image-box {
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      align-items: center;
      overflow: hidden;
      background: #111;
      border-right: 2px solid #fff;
    }
    .image-box.right {
      border-right: none;
    }
    .side-image {
      width: 100%;
      height: 60vh;
      min-height: 320px;
      object-fit: cover;
      display: block;
      transition: object-position 0.2s;
      border: none;
    }
    .image-overlay {
      position: absolute;
      bottom: 32px;
      left: 0; right: 0;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      padding: 32px 40px;
      background: linear-gradient(0deg, rgba(17,17,17,0.7) 60%, rgba(17,17,17,0.0) 100%);
    }
    .image-title {
      color: #fff;
      font-size: 2vw;
      font-weight: bold;
      margin-bottom: 16px;
      letter-spacing: -0.03em;
      text-shadow: 0 2px 8px rgba(0,0,0,0.18);
    }
    .buy-btn {
      display: inline-block;
      color: #111;
      background: #fff;
      padding: 12px 32px;
      font-weight: bold;
      border-radius: 2px;
      text-decoration: none;
      font-size: 1.1vw;
      border: 2px solid #fff;
      transition: background 0.18s, color 0.18s;
    }
    .buy-btn:hover {
      background: #111;
      color: #fff;
    }
    @media (max-width: 900px) {
      .two-image-grid {
        grid-template-columns: 1fr;
        grid-template-rows: 1fr 1fr;
      }
      .image-title {
        font-size: 6vw;
      }
      .buy-btn {
        font-size: 3vw;
      }
      .side-image {
        height: 40vw;
      }
      .image-overlay {
        padding: 24px 16px;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Two Image Buy Section",
  "settings": [
    { "type": "image_picker", "id": "left_image", "label": "Left Image" },
    { "type": "text", "id": "left_title", "label": "Left Image Title", "default": "Shop Left" },
    { "type": "text", "id": "left_button_text", "label": "Left Button Text", "default": "Buy" },
    { "type": "url", "id": "left_button_link", "label": "Left Button Link" },
    { "type": "select", "id": "left_focal_point", "label": "Left Image Focal Point", "options": [
      { "value": "center", "label": "Center" },
      { "value": "top", "label": "Top" },
      { "value": "bottom", "label": "Bottom" },
      { "value": "left", "label": "Left" },
      { "value": "right", "label": "Right" }
    ], "default": "center" },
    { "type": "image_picker", "id": "right_image", "label": "Right Image" },
    { "type": "text", "id": "right_title", "label": "Right Image Title", "default": "Shop Right" },
    { "type": "text", "id": "right_button_text", "label": "Right Button Text", "default": "Buy" },
    { "type": "url", "id": "right_button_link", "label": "Right Button Link" },
    { "type": "select", "id": "right_focal_point", "label": "Right Image Focal Point", "options": [
      { "value": "center", "label": "Center" },
      { "value": "top", "label": "Top" },
      { "value": "bottom", "label": "Bottom" },
      { "value": "left", "label": "Left" },
      { "value": "right", "label": "Right" }
    ], "default": "center" }
  ]
}
{% endschema %}
