{%- style -%}
.footer-strip {
  width: 100%;
  background: #111;
  color: #bdbdbd;
  text-align: center;
  padding: 1.15rem 0 1.05rem 0;
  font-size: 1.03rem;
  font-weight: 600;
  letter-spacing: 0.02em;
  border-top: 1px solid #222;
  margin-top: 0;
}
.footer-strip a {
  color: #fff;
  text-decoration: underline;
  font-weight: 700;
  margin-left: 0.15em;
  transition: color 0.2s;
}
.footer-strip a:hover {
  color: #fff200;
}
{%- endstyle -%}
